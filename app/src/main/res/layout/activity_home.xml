<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="40"
    android:orientation="vertical"
    android:background="@color/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/ic_header_profile"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_side_menu"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_notification"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pickBorder"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/circle_border"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/profile"/>
        <TextView
            android:id="@+id/nama"
            android:layout_below="@id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moch. Star Ramadhan"
            android:textColor="@color/lightBlue"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/golDarah"
            android:layout_below="@id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Type : A"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/separate2"
            android:layout_below="@id/golDarah"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/separator"/>
        <LinearLayout
            android:id="@+id/dashboard"
            android:layout_below="@id/separate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="75"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/lightBlue"
                 />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="100"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/lightBlue"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="330"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/lightBlue"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/descDashboard"
            android:layout_below="@id/dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="BLOOD GIVE"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/fontDesc"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="BLOOD RECEIVED"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/fontDesc"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="THANKS"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/fontDesc"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/separate1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:id="@+id/imgMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/menu1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/circle_blue"
                android:src="@drawable/ic_search_donor"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/menu2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="60dp"
                android:background="@drawable/circle_blue"
                android:src="@drawable/ic_blood_needed"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/titleMenu"
            android:layout_below="@id/imgMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Search Donor"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Blood Needed"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/descMenu"
            android:layout_below="@id/titleMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="Search donor near you"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/fontDesc"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="4 Users need blood"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/fontDesc"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/titleMenu2"
            android:layout_below="@id/descMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/menu3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/circle_blue"
                android:src="@drawable/ic_message"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/menu4"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="55dp"
                android:background="@drawable/circle_blue"
                android:src="@drawable/ic_donor_history"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/titleMenu1"
            android:layout_below="@id/titleMenu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Message"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Donnor History"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/descMenu2"
            android:layout_below="@id/titleMenu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="5 New Messages"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/fontDesc"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="5 Gives, 4 Received"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/fontDesc"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
